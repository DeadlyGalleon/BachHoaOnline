<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Phần nội dung chính -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Toolbar -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbartrangchu"
                android:background="#3FAAAA"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:titleTextColor="@android:color/white"
                app:title="Trang Chủ">

                <!-- Nút hành động -->
                <ImageButton
                    android:id="@+id/action_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_3p_24"
                    android:background="?attr/selectableItemBackgroundBorderless" />
                <ImageButton
                    android:id="@+id/addproduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_3p_24"
                    android:background="?attr/selectableItemBackgroundBorderless" />

            </androidx.appcompat.widget.Toolbar>

            <!-- ViewFlipper -->
            <ViewFlipper
                android:id="@+id/quangcaotrangchu"
                android:layout_width="match_parent"
                android:layout_height="180dp">

            </ViewFlipper>

            <!-- Layout chứa tiêu đề "Sản Phẩm Mới" và RecyclerView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3FAAAA"
                android:orientation="vertical">

                <!-- Tiêu đề "Sản Phẩm Mới" -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sản Phẩm Mới"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="25sp" />

                <!-- RecyclerView chứa sản phẩm mới -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/sanphammoitrangchu"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- Bottom Navigation -->


        </LinearLayout>

        <!-- NavigationView (Drawer) -->
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navtrangchu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start">

            <!-- ListView của NavigationView -->
            <ListView
                android:id="@+id/listviewtrangchu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navbottomtrangchu"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_navigation_menu"
        android:layout_marginBottom="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
