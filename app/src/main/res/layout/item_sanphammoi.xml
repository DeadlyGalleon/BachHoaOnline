<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Sản phẩm thứ nhất -->
    <LinearLayout
        android:id="@+id/productLayout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/rounded_corner"
        android:layout_margin="4dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_corner"
            android:clipToOutline="true" />

        <TextView
            android:id="@+id/tenTextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Sản Phẩm 1"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/giaTextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá Bán 1"
            android:textAlignment="center"
            android:layout_marginTop="4dp" />



    </LinearLayout>

    <!-- Sản phẩm thứ hai -->
    <LinearLayout
        android:id="@+id/layoutProduct2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/rounded_corner"
        android:layout_margin="4dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_corner"
            android:clipToOutline="true" />

        <TextView
            android:id="@+id/tenTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Sản Phẩm 2"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/giaTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá Bán 2"
            android:textAlignment="center"
            android:layout_marginTop="4dp" />


    </LinearLayout>

</LinearLayout>
