<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100dp"
    >
    <EditText
        android:id="@+id/tentaikhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên Tài Khoản"
        android:layout_margin="16dp"
        android:inputType="text" />


    <EditText
        android:id="@+id/sodienthoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số Điện Thoại"
        android:layout_below="@id/tentaikhoan"
        android:layout_margin="16dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/matkhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật Khẩu"
        android:layout_below="@id/sodienthoai"
        android:layout_margin="16dp"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/nhaplaimatkhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_below="@id/matkhau"
        android:layout_margin="16dp"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buttondangky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng Ki"
        android:layout_below="@id/nhaplaimatkhau"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/textViewLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Log in"
        android:layout_below="@id/buttondangky"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/quayvelogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Login"
        android:layout_below="@id/textViewLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />




</RelativeLayout>
